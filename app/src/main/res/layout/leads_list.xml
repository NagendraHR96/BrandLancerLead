<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/blackColor"
                    android:text="Nagendra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cust_name"
                    android:drawableStart="@drawable/ic_person_24dp"
                    android:drawableLeft="@drawable/ic_person_24dp"
                    android:drawablePadding="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"/>
                <TextView
                    android:textColor="#D9000000"
                    android:text="9966423172"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cust_phone"
                    android:drawableStart="@drawable/ic_phone_24dp"
                    android:drawableLeft="@drawable/ic_phone_24dp"
                    android:drawablePadding="5dp"
                    android:maxLines="1"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:textColor="#D9000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/metStatus"
                    android:drawableStart="@drawable/ic_location_off_black_24dp"
                    android:drawableLeft="@drawable/ic_supervisor_account_black_24dp"
                    android:drawablePadding="5dp"
                    android:maxLines="1"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:orientation="vertical">
                <TextView
                    android:textColor="#D9000000"
                    android:text="Radha K"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lead_tele"
                    android:drawableStart="@drawable/ic_headset_24dp"
                    android:drawableLeft="@drawable/ic_headset_24dp"
                    android:drawablePadding="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"/>
                <TextView
                    android:textColor="#D9000000"
                    android:text="12/02/2020  06:00:27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lead_time"
                    android:ellipsize="end"
                    android:drawableStart="@drawable/ic_time_24dp"
                    android:drawableLeft="@drawable/ic_time_24dp"
                    android:drawablePadding="5dp"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:gravity="center_vertical"/>

                <TextView
                    android:textColor="@color/redColor"
                    android:id="@+id/lead_Status"
                    android:text="Recived"
                    android:paddingLeft="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:maxLines="1"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"/>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:textColor="#D9000000"
            android:padding="5dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/feedBackHint"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/viewBut"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:text="View All"
            android:textAllCaps="false"
            android:textColor="@color/blackColor"/>

    </LinearLayout>

</android.support.v7.widget.CardView>