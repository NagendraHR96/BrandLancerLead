<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:elevation="5dp"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".DpPendingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

<FrameLayout
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="0dp">

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/right_top_corner"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/dplist_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>


    </LinearLayout>

</FrameLayout>

    <LinearLayout
        android:id="@+id/isVissible"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/isFollowVisible"
        android:padding="5dp"
        android:background="@color/gold"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">


            <Button
                android:id="@+id/SourceClicked"
                android:textAllCaps="false"
                android:textColor="@color/blackColor"
                android:background="@color/checkedColour"
                android:textSize="16sp"
                android:text="Call"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/itemClicked"
                android:textAllCaps="false"
                android:background="@color/gold"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textColor="@color/blackColor"
                android:textSize="16sp"
                android:text="Sms"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

    </LinearLayout>
    </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>
